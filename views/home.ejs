<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Quiz Attempt</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      body {
        background-color: #e4e9fd;
        min-height: 1000px;
        font-family: "helvetica neue";
      }
      h1{
        padding:24px 32px 32px 32px;
      }
      .box {
        position: relative;
      }

    #signout {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: #007bff;
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

    #signout:hover {
        background-color: #0056b3;
      }
    </style>
  </head>
  <body>
    <div class="box">
      <form action="/signout" method="get">
        <button id="signout">Sign Out</button>
      </form>
    </div>
    <h1>Available Quizzes</h1>
    <div class="album py-5 ">
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% for(let i=0,j=1;i<numberOfQuizzes;i++){ %>
            <div class="col">
              <div class="card shadow-sm">
                <img class="card-img-top" src="../assets/icons/texture<%= j %>.avif">
                <div class="card-body">
                  <h3 class="card-text"><%= quizTitle[i] %></h3>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <form action="/test" method="post">
                        <button type="submit" class="btn btn-sm btn-outline-secondary" name="title" value="<%= quizTitle[i] %>" >Attempt Quiz</button>
                      </form>
                    </div>
                    <!-- <small class="text-body-secondary">9 mins</small> -->
                  </div>
                </div>
              </div>
            </div>
            <% (j<4) ? j++ : j=1 %>
          <% } %>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">

    
    </script>
  </body>
</html>